{
  "name": "copilot-nightly",
  "displayName": "Cometix-Tab",
  "description": "Cursor AI",
  "publisher": "GitHub",
  "icon": "icons/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Haleclipse/Cometix-Tab.git"
  },
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "enabledApiProposals": [
    "inlineCompletionsAdditions"
  ],
  "categories": [
    "Machine Learning",
    "Snippets",
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cometix-tab.toggleEnabled",
        "title": "Toggle Enabled",
        "category": "Cometix Tab"
      },
      {
        "command": "cometix-tab.showLogs",
        "title": "Show Logs",
        "category": "Cometix Tab"
      },
      {
        "command": "cometix-tab.showStatusMenu",
        "title": "Show Status Menu",
        "category": "Cometix Tab"
      },
      {
        "command": "cometix-tab.openConfiguration",
        "title": "Open Configuration Guide",
        "category": "Cometix Tab"
      },
      {
        "command": "cometix-tab.debugAuth",
        "title": "Debug Authentication",
        "category": "Cometix Tab"
      },
      {
        "command": "cometix-tab.debugCompletion",
        "title": "Debug Code Completion",
        "category": "Cometix Tab"
      },
      {
        "command": "cometix-tab.debugEditHistory",
        "title": "Debug Edit History",
        "category": "Cometix Tab"
      },
      {
        "command": "cometix-tab.debugSmartEdit",
        "title": "Debug Smart Edit Detection",
        "category": "Cometix Tab"
      },
      {
        "command": "cometix-tab.showPerformanceReport",
        "title": "Show Performance Report",
        "category": "Cometix Tab"
      },
      {
        "command": "cometix-tab.testGhostText",
        "title": "Test Ghost Text",
        "category": "Cometix Tab"
      },
      {
        "command": "cometix-tab.testSimpleInsert",
        "title": "Test Simple Insert",
        "category": "Cometix Tab"
      },
      {
        "command": "cometix-tab.testDiffAlgorithm",
        "title": "Test Diff Algorithm",
        "category": "Cometix Tab"
      },
      {
        "command": "cometix-tab.testFileDiff",
        "title": "Test File Diff Histories",
        "category": "Cometix Tab"
      },
      {
        "command": "cometix-tab.setLogLevel",
        "title": "Set Log Level",
        "category": "Cometix Tab"
      },
      {
        "command": "cometix-tab.refreshCppConfig",
        "title": "Refresh Server Configuration",
        "category": "Cometix Tab"
      },
      {
        "command": "cometix-tab.manualTriggerCompletion",
        "title": "Manual Trigger Code Completion",
        "category": "Cometix Tab"
      }
    ],
    "keybindings": [
      {
        "command": "cometix-tab.manualTriggerCompletion",
        "key": "alt+\\",
        "mac": "option+\\",
        "when": "editorTextFocus && !editorReadonly",
        "description": "Manual trigger AI code completion (GitHub Copilot style: Alt+\\)"
      }
    ],
    "configuration": {
      "title": "Cometix Tab",
      "properties": {
        "cometixTab.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Cometix Tab AI code completion"
        },
        "cometixTab.endpointType": {
          "type": "string",
          "enum": [
            "official",
            "selfhosted"
          ],
          "enumDescriptions": [
            "Official api2.cursor.sh endpoint (Connect RPC format)",
            "Self-hosted cursor-api endpoint (REST format)"
          ],
          "default": "official",
          "description": "Choose between official Cursor API or self-hosted cursor-api"
        },
        "cometixTab.serverUrl": {
          "type": "string",
          "default": "https://api2.cursor.sh",
          "description": "Cursor API server URL (will use default based on endpoint type if empty)"
        },
        "cometixTab.authToken": {
          "type": "string",
          "default": "",
          "description": "Authentication token for Cursor API"
        },
        "cometixTab.clientKey": {
          "type": "string",
          "default": "",
          "description": "Client key/checksum for authentication (auto-generated). For official endpoint, this is x-cursor-checksum; for self-hosted, this is x-client-key."
        },
        "cometixTab.gcppHost": {
          "type": "string",
          "enum": [
            "US",
            "EU",
            "Asia"
          ],
          "default": "US",
          "description": "GCPP host region"
        },
        "cometixTab.model": {
          "type": "string",
          "enum": [
            "auto",
            "fast",
            "advanced"
          ],
          "default": "auto",
          "description": "AI completion model selection"
        },
        "cometixTab.snoozeUntil": {
          "type": "number",
          "default": 0,
          "description": "Snooze completion until timestamp (internal use)"
        },
        "cometixTab.maxCompletionLength": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 5000,
          "description": "Maximum completion length in tokens"
        },
        "cometixTab.debounceMs": {
          "type": "number",
          "default": 300,
          "minimum": 100,
          "maximum": 2000,
          "description": "Debounce delay for file sync (milliseconds)"
        },
        "cometixTab.logLevel": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "enumDescriptions": [
            "Debug - Show all logs including detailed debugging information",
            "Info - Show general information and above",
            "Warn - Show warnings and errors only",
            "Error - Show errors only"
          ],
          "default": "info",
          "description": "Log level for Cometix Tab extension"
        },
        "cometixTab.contextRadius": {
          "type": "object",
          "properties": {
            "above": {
              "type": "number",
              "default": 50,
              "minimum": 0,
              "maximum": 200
            },
            "below": {
              "type": "number", 
              "default": 50,
              "minimum": 0,
              "maximum": 200
            }
          },
          "default": {
            "above": 50,
            "below": 50
          },
          "description": "Context radius for code completion (lines above/below cursor)"
        },
        "cometixTab.ghostTextMode": {
          "type": "boolean",
          "default": true,
          "description": "Enable ghost text mode for completions (from server config)"
        },
        "cometixTab.enabledHeuristics": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Enabled heuristics for code completion (from server config)"
        },
        "cometixTab.triggerConfig": {
          "type": "object",
          "properties": {
            "commaTriggersCompletion": {
              "type": "boolean",
              "default": true,
              "description": "Enable completion trigger after comma (,)"
            },
            "newLineHighConfidence": {
              "type": "boolean", 
              "default": true,
              "description": "High confidence completion on new empty lines"
            },
            "lineEndHighConfidence": {
              "type": "boolean",
              "default": true, 
              "description": "High confidence completion at line end positions"
            },
            "customTriggerChars": {
              "type": "array",
              "items": {
                "type": "string",
                "maxLength": 2
              },
              "default": [],
              "description": "Additional custom trigger characters (max 2 chars each)"
            }
          },
          "default": {
            "commaTriggersCompletion": true,
            "newLineHighConfidence": true,
            "lineEndHighConfidence": true,
            "customTriggerChars": []
          },
          "description": "Advanced trigger configuration for code completion"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "package:vsix": "vsce package --no-dependencies -o dist/",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "proto:gen": "pnpm run proto:clean && pnpm run proto:gen-es && pnpm run proto:gen-connect",
    "proto:clean": "rm -rf src/generated",
    "proto:gen-es": "protoc --plugin=./node_modules/.bin/protoc-gen-es --es_out=src/generated --es_opt=target=ts --proto_path=src/proto src/proto/*.proto",
    "proto:gen-connect": "protoc --plugin=./node_modules/.bin/protoc-gen-connect-es --connect-es_out=src/generated --connect-es_opt=target=ts --proto_path=src/proto src/proto/*.proto"
  },
  "devDependencies": {
    "@bufbuild/protoc-gen-es": "1.10.0",
    "@connectrpc/protoc-gen-connect-es": "^1.6.0",
    "@types/crypto-js": "^4.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@bufbuild/protobuf": "1.10.0",
    "@connectrpc/connect": "1.6.1",
    "@connectrpc/connect-web": "1.6.1",
    "crypto-js": "^4.2.0",
    "diff": "^8.0.2",
    "protobufjs": "^7.5.3"
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184"
}
